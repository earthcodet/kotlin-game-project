<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="119dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/scroeText"
                        android:layout_width="178dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="35dp"
                        android:text="@string/scoreText"
                        android:textSize="@dimen/gameTextSize" />

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="157dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="30dp"
                        android:text="@string/timeText"
                        android:textSize="@dimen/gameTimeSize" />
                </LinearLayout>

                <TextView
                    android:id="@+id/levelText"
                    android:layout_width="192dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="52dp"
                    android:layout_marginRight="52dp"
                    android:gravity="center"
                    android:text="@string/levelText"
                    android:textSize="@dimen/gameTextSize" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="375dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/play1button"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                    <Button
                        android:id="@+id/play2button"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                    <Button
                        android:id="@+id/play3button"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/play4button"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                    <Button
                        android:id="@+id/play5button"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                    <Button
                        android:id="@+id/play6button"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/play7button"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                    <Button
                        android:id="@+id/play8button"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />

                    <Button
                        android:id="@+id/play9button"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heart1"
                    android:layout_width="96dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:id="@+id/heart2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/heart" />

                <ImageView
                    android:id="@+id/heart3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/heart" />

                <TextView
                    android:id="@+id/endGameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="67dp"
                    android:layout_weight="1"
                    android:text="@string/endText" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</layout>

